<%= form_with(model: [@list, @bookmark], local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :movie_id, "Choose a movie" %>
    <%= form.collection_select :movie_id, Movie.all, :id, :title, { prompt: "Select a movie" }, { class: "form-select" } %>
  </div>

  <div class="mb-3">
    <%= form.label :comment %>
    <%= form.text_area :comment, class: "form-control", placeholder: "Add your comment" %>
  </div>

  <%= form.submit "Add Movie", class: "btn btn-primary" %>
<% end %>
